<%= render "layouts/header"%>

<h2> Create new Account </h2> <br>

<% if flash[:messages] %>
  <% flash[:messages].each do |message| %>
  <%= message%>
  <br>
  <% end %>
<% end %>
<br>

<%= form_for @blogger do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
    <%= f.label :age %>
  <%= f.number_field :age %>
  <br>
  <%= f.label :bio %>
  <%= f.text_area :bio %>
  <br>
  <%= f.submit %>
<% end %>